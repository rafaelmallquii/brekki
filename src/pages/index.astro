---
import { Image } from "astro:assets";
import Layout from "../components/Layout.astro";
import heroImage from "./img/hero_image.webp";
import brekkiGrains from "./img/brekki_grains.png";
import bananaGif from "./img/badge_banana_strawberry.gif";
---

<Layout title="Inicio">
  <section class="hero bg-[var(--white)] py-9 relative">
    <div
      class="container m-auto text-[var(--pink)] text-center flex flex-col items-center gap-8 py-9"
    >
      <span class="text-2xl max-w-[80vw]"
        >ready to eat oats with ancient grains</span
      >
      <h1 class="text-[9rem] leading-[1]">take a brekki</h1>
    </div>
    <Image
      src={heroImage}
      alt="Take a brekki"
      class="absolute right-0 md:w-[73vw] w-[100vw] lg:left-auto translate-x-[7rem] translate-y-[-5rem] md:translate-y-[-6rem]"
    />
  </section>

  <section
    class="bg-[var(--skin)] text-[var(--pink)] text-center text-6xl h-[50vw] md:h-[30rem] min-h-[26.5rem] max-h-[55rem] py-[7rem] px-[3rem] relative flex justify-center items-center"
  >
    <blockquote class="md:w-[43rem] m-auto leading-[1.3] text-5xl">
      when your full plate calls for a full bowl #takeabrekki<sup class="text-[16%] top-[-4em]"> TM</sup>
    </blockquote>
    <Image
      src={bananaGif}
      alt="Banana strawberry gif from brekki"
      class="hidden md:inline absolute w-[16.6rem] h-[16.6rem] right-[10vw] bottom-[-5rem]"
    />
  </section>

  <section class="flex flex-wrap lg:flex-nowrap">
    <div
      class="bg-[var(--white)] flex justify-center items-center w-full h-[30.5rem]"
    >
      <Image
        src={brekkiGrains}
        alt="brekki ingredients"
        width={450}
        height={280}
      />
    </div>
    <div
      class="bg-[var(--pink)] text-[var(--white)] flex justify-center items-center w-full h-[30.5rem]"
    >
      <p
        class="text-center text-[1.5rem] leading-[1.5] max-h-[6em] max-w-[500px]"
      >
        brekki is made with nothing but the best ingredients, including ancient
        grains, almonds, oats, almond milk and organic coconut nectar.
      </p>
    </div>
  </section>
</Layout>

<style>
  .hero {
    padding-bottom: 36vw;
  }
  @media screen and (min-width: 67.5em) {
    .hero {
      padding-bottom: 36vw;
    }
  }
</style>
